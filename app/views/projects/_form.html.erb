<%= form_for :project, url: '/projects', html: { class: 'form-horizontal' } do %>
      <div class="modal-body">
          <!--<div class="form-group">
            <label for="inputProjectID" class="col-sm2 control-label">ID</label>
            <div class="col-sm-10">
              <input type="id" name="project[id]" class="form-control" id="id" placeholder=""
                     value="" required>
            </div>
          </div>-->
          <div class="form-group">
            <label for="inputProjectName" class="col-sm2 control-label">Name</label>
            <div class="col-sm-10">
              <input name="project[name]" id="inputProjectName" class="form-control" value="<%= @project.name %>" required>
              </input>
            </div>
          </div>
          <div class="form-group">
            <label for="inputProjectDescription" class="col-sm2 control-label">Description</label>
            <div class="col-sm-10">
              <textarea name="project[body]" id="inputDescription" class="form-control" value="<%= @project.description %>" required>
              </textarea>
            </div>
          </div>
          <div class="form-group">
            <label for="inputProjectProductOwner" class="col-sm2 control-label">Product Owner</label>
            <div class="col-sm-10">
              <input name="project[product_owner]" id="inputProjectProductOwner" class="form-control" value="<%= @project.product_owner %>" required>
              </input>
            </div>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default btn-danger" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
     <% end %>