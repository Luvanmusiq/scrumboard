<div class="modal" id="new-story-modal<%= @project.id %>" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">New Story</h4>
      </div>
       <!-- form for submitting tasks -->
      <!-- <form action="" class="form-horizontal" action="/tasks" method="post"> -->
       <!-- use the form helper in rails -->
      <%# form_for [:project, @story], url: "/projects/:project_id/stories/new", html: { class: "form-horizontal" } do %>
      <%= form_for :story, url: '/stories', html: { class: "form-horizontal" } do %>
      <div class="modal-body">
          <!--<div class="form-group">
            <label for="inputStoryID" class="col-sm2 control-label">ID</label>
            <div class="col-sm-10">
              <input type="text" name="story[id]" class="form-control" id="id" value="<%= Story.new.id %>" required>
              <!-- </div> -->
            <!--</div>
          </div>-->
          <div class="form-group">
            <label for="inputStory" class="col-sm2 control-label">Story</label>
            <div class="col-sm-10">
              <input type="text" name="story[name]" id="inputStory" class="form-control" placeholder="What is your story?" required>
              </input>
            </div>
          </div>
          <div class="form-group">
            <label for="inputProjectName" class="col-sm2 control-label">Project</label>
            <div class="col-sm-10">
              <input name="story[project_id]" id="inputProjectName" class="form-control" value="<%= @project.id %> <%= @project.name %>" required>
              </input>
            </div>
          </div>
          <div class="form-group">
            <label for="inputProjectDescription" class="col-sm2 control-label">Description</label>
            <div class="col-sm-10">
              <textarea name="story[description]" id="inputDescription" class="form-control" placeholder="Project Description" required>
              </textarea>
            </div>
          </div>
          <div class="form-group">
            <label for="inputProjectProductOwner" class="col-sm2 control-label">Owner</label>
            <div class="col-sm-10">
              <input name="story[owner]" id="inputProjectProductOwner" class="form-control" placeholder="Product Owner" required>
              </input>
            </div>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default btn-danger" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
     <% end %>
      <!-- end of form -->
    </div>
  </div>
</div>