<div class="modal" id="new-project-modal2" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">New Project</h4>
      </div>
       <!-- form for submitting projects -->
      <!--<form action="" class="form-horizontal" action="/projects" method="post">-->
       <!-- use the form helper in rails -->
      <%= form_for :project, url: '/projects', html: { class: 'form-horizontal' } do %>
      <div class="modal-body">
          <!--<div class="form-group">
            <label for="inputProjectID" class="col-sm2 control-label">ID</label>
            <div class="col-sm-10">
              <input type="id" name="project[id]" class="form-control" id="id" placeholder=""
                     value="" required>
            </div>
          </div>-->
          <div class="form-group">
            <label for="inputProjectName" class="col-sm2 control-label">Name</label>
            <div class="col-sm-10">
              <input name="project[name]" id="inputProjectName" class="form-control" placeholder="What is your project?" required>
              </input>
            </div>
          </div>
          <div class="form-group">
            <label for="inputProjectDescription" class="col-sm2 control-label">Description</label>
            <div class="col-sm-10">
              <textarea name="project[body]" id="inputDescription" class="form-control" placeholder="Project Description" required>
              </textarea>
            </div>
          </div>
          <div class="form-group">
            <label for="inputProjectProductOwner" class="col-sm2 control-label">Product Owner</label>
            <div class="col-sm-10">
              <input name="project[product_owner]" id="inputProjectProductOwner" class="form-control" placeholder="Product Owner" required>
              </input>
            </div>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default btn-danger" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
     <% end %>
      <!-- end of form -->
    </div>
  </div>
</div>